{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section 
        class="avatar" 
        style="background: url({{ member.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">

        <h3>Detalhes</h3>

        <div class="item">
            <div>Nome</div>
            <div>{{ member.name }}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{ member.age }}</div>
        </div>

        <div class="item">
            <div>Gênero</div>
            <div>{{ "Masculino" if member.gender == "M" else "Feminino" }}</div>
        </div>

        <div class="item">
            <div>Tipo sanguíneo</div>
            <div>
                {% if member.blood == "A0"  %} A+  {% endif %}
                {% if member.blood == "A1"  %} A-  {% endif %}
                {% if member.blood == "B0"  %} B+  {% endif %}
                {% if member.blood == "B1"  %} B-  {% endif %}
                {% if member.blood == "AB0" %} AB+ {% endif %}
                {% if member.blood == "AB1" %} AB- {% endif %}
                {% if member.blood == "O0"  %} O+  {% endif %}
                {% if member.blood == "O1"  %} O-  {% endif %}
            </div>
        </div>

        <div class="item">
            <div>Peso</div>
            <div>{{ member.weight }}</div>
        </div>

        <div class="item">
            <div>Altura</div>
            <div>{{ member.height }}</div>
        </div>

        <div class="item">
            <div>E-mail</div>
            <div>{{ member.email }}</div>
        </div>

        <div class="item">
            <div>Desde</div>
            <div>{{ member.created_at }}</div>
        </div>

        <a href="/members/{{ member.id }}/edit" class="button">Editar</a>

    </section>
</div>

{% endblock content %}