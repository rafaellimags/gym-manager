{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <div class="header">
            <a class="button" href="/members/create">Novo</a>
            <form action="/members" method="GET">
                <input name="filter" type="text" value="{{ filter }}" placeholder="Nome ou e-mail">
                <button type="submit">Buscar</button>
            </form>
        </div>
        <table width="100%">
            <thead>
                <tr>
                    <th>Membro</th>
                    <th>E-mail</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ member.avatar_url }})"></span>{{ member.name }}
                        </td>
                        <td>
                            {{ member.email }}
                        </td>
                        <td>
                            <a href="/members/{{ member.id }}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="pagination"
            data-page="{{ pagination.page }}"
            data-total="{{ pagination.total }}"
            data-filter="{{ filter }}"
        ></div>
    </div>
{% endblock content %}